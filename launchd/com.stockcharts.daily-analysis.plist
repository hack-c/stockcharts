<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.stockcharts.daily-analysis</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/chack/stockcharts/.venv/bin/python</string>
        <string>-c</string>
        <string>import time; time.sleep(30); import runpy; runpy.run_module('src.main', run_name='__main__')</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/chack/stockcharts</string>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>6</integer>
        <key>Minute</key>
        <integer>30</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/chack/stockcharts/logs/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/chack/stockcharts/logs/launchd-stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
